<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".admin.uploadmeals.presentation.UploadMealFragment">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/upload_meals_rv_meal_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_alignTop="@id/upload_meals_rv_meal_name_tv"
                        android:layout_alignBottom="@id/upload_meals_rv_date_serving_tv"
                        android:src="@drawable/chicken"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/upload_meals_rv_meal_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/upload_meals_rv_meal_iv"
                        android:layout_marginStart="80dp"
                        android:fontFamily="@font/manrope_regular"
                        android:text="@string/jellof_rice_amp_chicken"
                        android:textColor="@color/Jellof_rice"
                        android:textFontWeight="700"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded,UnusedAttribute" />

                    <TextView
                        android:id="@+id/upload_meals_rv_meal_serving_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/upload_meals_rv_meal_iv"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/manrope_regular"
                        android:text="@string/brunch"
                        android:textColor="@color/Jellof_rice"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:id="@+id/upload_meals_rv_kitchen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/upload_meals_rv_meal_serving_time_tv"
                        android:layout_alignStart="@id/upload_meals_rv_meal_iv"
                        android:layout_marginStart="80dp"
                        android:fontFamily="@font/manrope_regular"
                        android:text="@string/uno_kitchen"
                        android:textColor="@color/Jellof_rice"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        tools:ignore="UnusedAttribute" />


                    <TextView
                        android:id="@+id/upload_meals_rv_date_serving_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/upload_meals_rv_kitchen_tv"
                        android:layout_alignStart="@id/upload_meals_rv_kitchen_tv"
                        android:text="@string/date_serving" />

                    <TextView
                        android:id="@+id/upload_meals_rv_mealId_tv"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/upload_meals_rv_remove_tv"
                        android:text="mealId"/>

                    <TextView
                        android:id="@+id/upload_meals_rv_remove_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/manrope_regular"
                        android:text="@string/remove"
                        android:textColor="@color/Remove_color"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        tools:ignore="RelativeOverlap,UnusedAttribute" />


                    <TextView
                        android:id="@+id/upload_meals_rv_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/login_input_background"
                        android:fontFamily="@font/manrope_regular"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="@string/edit"
                        android:textColor="@color/Today_color"
                        android:textFontWeight="600"
                        android:textSize="14sp"
                        tools:ignore="RelativeOverlap,RtlHardcoded,UnusedAttribute" />

                    <LinearLayout
                        android:layout_below="@id/upload_meals_rv_edit_tv"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#f8f8f8"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
</RelativeLayout>